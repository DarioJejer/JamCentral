@model JamCentral.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}
<h1>Upcoming Gigs</h1>
<ul class="gigs">
    @foreach (var gig in Model.upcomingGigs)
    {
    <li>
        <div class="date">
            <div class="month">@gig.Date.ToString("MMM")</div>
            <div class="day">@gig.Date.ToString("d ")</div>
        </div>
        <div class="details">
            <span class="artist">
                @gig.Artist.Name
                @if (Model.isAuthenticated)
                {
                    <button data-artist-id="@gig.ArtistId" class="btn btn-link btn-sm js-toggle-follow">Follow</button>
                }
            </span>
            <span class="genre">@gig.Genre.Name</span>
            @if (Model.isAuthenticated)
            {
            <button data-gig-id="@gig.Id" class="btn btn-light btn-sm float-right js-toggle-attendance">Going?</button>
            }
        </div>
    </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function(e) {
                var button = $(e.target);
                $.post("/api/attendences", { GigId: button.attr("data-gig-id") })
                    .done(function(){
                        button
                            .removeClass("btn-light")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function(){
                        alert("Something failed!");
                    });
            });
            $(".js-toggle-follow").click(function(e) {
                var link = $(e.target);
                $.post("/api/followings", { ArtistId: link.attr("data-artist-id") })
                    .done(function(){
                        link.text("Following");
                    })
                    .fail(function(){
                        alert("Something failed!");
                    });
            });

        });
    </script>
}
