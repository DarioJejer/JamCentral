@model JamCentral.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Home Page";
}
<h1>Upcoming Gigs</h1>

@Html.Partial("_GigsList")

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function(e) {
                var button = $(e.target);
                $.post("/api/attendences", { GigId: button.attr("data-gig-id") })
                    .done(function(){
                        button
                            .removeClass("btn-light")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function(){
                        alert("Something failed!");
                    });
            });
            $(".js-toggle-follow").click(function(e) {
                var link = $(e.target);
                $.post("/api/followings", { ArtistId: link.attr("data-artist-id") })
                    .done(function(){
                        link.text("Following");
                    })
                    .fail(function(){
                        alert("Something failed!");
                    });
            });

        });
    </script>
}
