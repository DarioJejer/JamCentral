<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JamCentral</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - JamCentral</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/x-handlebars-template" id="notifications-template">
        <ul>
            <% _.each(notifications, function(notification){
                %>
            <li>
                <% if(notification.type == 1) {%>
                <%= notification.gig.artist.name%> has cancel the gig at <%= notification.gig.location%> at <%=notification.gig.date%>
                <% }%>

                <% if(notification.type == 2) {%>
                <%= notification.gig.artist.name%> has modify the gig from <%= notification.GigPreviousLocation%> the <%=notification.GigPreviousDateTime%> to <%= notification.gig.location%> at <%=notification.gig.date%>
                <% }%>

                <% if(notification.type == 3) {%>
                <%= notification.gig.artist.name%> has added a new gig at <%= notification.gig.location%> at <%=notification.gig.date%>
                <% }%>
            </li>
                <%
            })%>
        </ul>
    </script>

    <script>
        $(document).ready(function () {
            $.getJSON("/api/notifications", function (notifications) {
                $(".js-notifications-count")
                    .text(notifications.length)
                    .removeClass("hide");

                $(".notifications").popover({
                    html: true,
                    title: "Notifications",
                    content: function () {
                        var compiled = _.template($("#notifications-template").html());
                        var html = compiled({notifications: notifications});

                        return html;
                    },
                    placement: "bottom"
                });
            });

        });
    </script>
</body>
</html>
